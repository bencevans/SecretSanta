extend layout

block content
  h1=group.name
  div.row
    div.span6
      h3= 'Secret Santas (' + users.length + ')'
      for user in users
        a(href='https://facebook.com/' + user.facebookId)
          img(src='https://graph.facebook.com/' + user.facebookId + '/picture')
    div.span6
      h3 Instructions
      h5 Send friends an invite to the group
      p Share the following link in messages, emails, texts etc. so your friends can join the group.
      div.form-inline
        label Invite URL:
        input(type='text', value=inviteURL, onclick='this.focus();this.select();')
      h5 Once everyone has joined!
      a(href='#') Then click here (NOT BEFORE)